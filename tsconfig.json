{
  "compilerOptions": {
    "target": "es6",                         
    "module": "ES2015",                     
    "outDir": "./dist",                        
    "rootDir": "./src",                       
    "removeComments": true,                
    "noEmitOnError": true,
    "strict": true,                          
    "noUnusedLocals": true,               
    "noUnusedParameters": true,           
    "noImplicitReturns": true,            
    "noFallthroughCasesInSwitch": true,   
    "noUncheckedIndexedAccess": true,     
    "esModuleInterop": true,                 
    "skipLibCheck": true,                    
    "forceConsistentCasingInFileNames": true 
  },
  "exclude": ["node_modules", "study","dist"]
}
